<% title = 'Entrar' %>
<!doctype html>
<html lang="pt-BR">
  <head>
    <% include ./components/head %>
    <style>
      html, body {
        height: 100%;
      }

      body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .container {
        margin: auto;
      }

      #button_group {
        display: flex;
        width: 100%;
        justify-content: space-between;
      }

      #brand {
        margin-left: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row justify-content-center">
        <div class="login-form col-12 col-sm-10 col-md-8 col-lg-6">
          <div id="brand">
            <h1>Atarefado</h1>
          </div>
          <div class="card">
            <div class="card-body">
                <% if (typeof error == 'object' && error) { %>
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <strong>Falha na autenticação!</strong> Usuário ou senha incorretos.
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                <% } %>
              <form action="/login" method="post">
                <div class="form-group">
                  <label for="username">Endereço de e-mail</label>
                  <input type="text" name="username" id="username" class="form-control" aria-describedby="helpId">
                  <small id="helpId" class="text-muted">Endereço usado para cadastro</small>
                </div>
                <div class="form-group">
                  <label for="password">Senha</label>
                  <input type="password" name="password" id="password" class="form-control" aria-describedby="helpId">
                  <small id="helpId" class="text-muted">Senha definida no seu cadastro</small>
                </div>
                <div id="button_group">
                    <a class="btn btn-secondary" href="/cadastro" role="button">Criar conta</a>
                  <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ./components/footer %>
  </body>
</html>