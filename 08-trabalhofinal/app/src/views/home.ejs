<% title = 'Tarefas' %>
<!doctype html>
<html lang="pt-BR">
  <head>
    <% include ./components/head %>
    <style>
      .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
      }
      
      .modal-content {
        background-color: #fefefe;
        margin: 50px 150px;
        padding: 20px;
        border: 1px solid #888;
        width: 400px; 
      }

      .modal-content h1{
        font-weight: bold;
      }

      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }

      .close:hover,
      .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
      }


      .modal-mini {
        text-align: center;
        font-size: xx-large;
        font-weight: bold;

        height: 50px;
        width: 250px;
        margin: 25px;

        border: 1px;
        border-color: black;
        border-radius: 15px;

        background: #dedede;
      }
      
      .add-button {
        text-align: center;
        font-size: xx-large;
        font-weight: bold;

        height: 50px;
        width: 50px;
        margin: 25px;

        border: 1px;
        border-color: black;
        border-radius: 25px;

        background: #dedede;
      }

    
    </style>
  </head>
  <body>
    <% include ./components/header %>
    <div class="container-fluid">

    </div>

    <div class="modal-mini" id="mini-exemplo">Compras</div> 
    
    <div class="add-button" id="myBtn">+</div>

    <div id="miniModal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <form action="/" method="post">
            <div class="form-group">
              <h1 align="center"> Compras </h1>
            </div>
  
            <div class="form-group">
              <textarea name="topic" cols="37" rows="5"> Arroz &#13;&#10; Macarrão &#13;&#10; Frango &#13;&#10; Sabão &#13;&#10; Beterraba &#13;&#10; Banana &#13;&#10; Maçã </textarea>
              <br>            
            </div>
  
            <div class="form-group">
              <textarea name="detail" cols="37" rows="3"> Não esquecer de pagar no débito! </textarea>
              <br> 
            </div>
            
            <div class="form-group">
                <textarea name="sharing" cols="37" rows="1"> epaminondas@email.com </textarea>
                <br> 
            </div>
  
            <div id="button_group">
              <a class="btn btn-secondary" role="button">Cancelar</a>
              <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
          </form>
        </div>    
      </div>

    
    <div id="myModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <form action="/" method="post">
          <div class="form-group">
            <label for="title">Título</label>
            <input type="text" name="title" id="title" class="form-control" aria-describedby="helpId">
          </div>

          <div class="form-group">
            <label for="topics">Tópicos</label> <br>
            <textarea name="topic" cols="37" rows="10"> </textarea>
            <br>            
          </div>

          <div class="form-group">
            <label for="detail">Detalhes</label> <br>
            <textarea name="detail" cols="37" rows="5"> </textarea>
            <br> 
          </div>
          
          <div class="form-group">
              <label for="sharing">Compatilhe</label> <br>
              <textarea name="sharing" cols="37" rows="2"> </textarea>
              <br> 
          </div>

          <div id="button_group">
            <a class="btn btn-secondary" role="button">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </div>
        </form>
      </div>    
    </div>

    <script>
      var modal = document.getElementById("myModal");
      var minimodal = document.getElementById("miniModal");

      var btn = document.getElementById("myBtn");
      var mini_exemplo = document.getElementById("mini-exemplo");

      // Get the <span> element that closes the modal
      var span = document.getElementsByClassName("close")[0];

      // When the user clicks on the button, open the modal
      btn.onclick = function() {
        modal.style.display = "block";
      }

      mini_exemplo.onclick = function() {
        minimodal.style.display = "block";
      }

      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
        modal.style.display = "none";
        minimodal.style.display = "none";
      }

      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }

        if (event.target == minimodal) {
          minimodal.style.display = "none";
        }
      } 
    </script>


    <% include ./components/footer %>
  </body>
</html>